<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_onboarding_third">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Financy"
        android:textColor="#191D21"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="462dp"
        android:layout_height="341dp"
        android:layout_marginTop="45dp"
        android:scaleType="fitStart"
        android:src="@drawable/third_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />


    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have access anywhere!"
        android:textSize="24sp"
        android:textColor="#191D21"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reach your financial goal\n\t\t\twithin your first year!"
        android:textSize="18sp"
        android:textColor="#191D21"
        app:layout_constraintTop_toBottomOf="@+id/tv_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_width="305dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Get Started"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/button_background"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="45dp"/>


</android.support.constraint.ConstraintLayout>