<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:background="@drawable/topnevback"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilepic" />

            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/cardView"
            android:text="Hi, Azeem"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileName"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="-26dp"
            android:layout_toEndOf="@+id/cardView"
            android:text="Welcome !"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/profile_dot" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/stblock_img"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:elevation="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/start_blocking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLayout" />

    <RelativeLayout
        android:id="@+id/block_layout"
        android:layout_width="95dp"
        android:layout_height="133dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/block_background"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stblock_img">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="17dp"
            android:background="@drawable/circle_background">

            <ImageView
                android:id="@+id/block_img"
                android:layout_width="23dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/block" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="17dp"
            android:text="Block"
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/uninstall_layout"
        android:layout_width="95dp"
        android:layout_height="133dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/uninstall_background"
        android:elevation="2dp"
        app:layout_constraintLeft_toRightOf="@+id/block_layout"
        app:layout_constraintTop_toBottomOf="@+id/stblock_img">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="17dp"
            android:background="@drawable/circle_background">

            <ImageView
                android:id="@+id/uninstall_img"
                android:layout_width="23dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/uninstall_img" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="17dp"
            android:text="Uninstall"
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/advance_layout"
        android:layout_width="95dp"
        android:layout_height="133dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/advance_background"
        android:elevation="2dp"
        app:layout_constraintLeft_toRightOf="@id/uninstall_layout"
        app:layout_constraintTop_toBottomOf="@+id/stblock_img">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="17dp"
            android:background="@drawable/circle_background">

            <ImageView
                android:id="@+id/advance_img"
                android:layout_width="23dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/advance_img" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="17dp"
            android:text="Advance"
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/premiumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Premium"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/block_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="60dp"
        android:text="Now"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_layout" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/arrow_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advance_layout" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="24dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/premiumText" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteY="668dp"
            android:background="@drawable/bottom_nav_background"
            android:elevation="10dp">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nev_menu"/>

        </FrameLayout>
</android.support.constraint.ConstraintLayout>